datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  subdomain String   @unique // Para barras-platform2.com -> [tenant].bars-platform2.com
  status    String   @default("ACTIVE") // ACTIVE, SUSPENDED
  createdAt DateTime @default(now())

  // Relaciones
  users       User[]
  business    Business?
  products    Product[]
  categories  Category[]
  ingredients Ingredient[]
  orders      Order[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String // Encriptado con bcrypt
  role      Role     @default(STAFF)
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  PLATFORM_ADMIN // Equipo interno
  OWNER // Dueño del negocio
  ADMIN // Gerente
  STAFF // Operación
}

model Business {
  id        String   @id @default(cuid())
  tenantId  String   @unique
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  name      String
  address   String?
  logoUrl   String?
  createdAt DateTime @default(now())
}

model Category {
  id       String  @id @default(cuid())
  name     String // Ejemplo: Bebidas, Comidas
  icon     String? // Ejemplo: 'beer', 'burger' (opcional, para el futuro)
  tenantId String
  tenant   Tenant  @relation(fields: [tenantId], references: [id])

  // Relación inversa
  products Product[]

  createdAt DateTime @default(now())
}

model Ingredient {
  id       String @id @default(cuid())
  name     String // Ej: "Pan de Hamburguesa"
  unit     String // Ej: "Unidad", "Kg", "Litro"
  stock    Float  @default(0) // Cantidad disponible
  cost     Float  @default(0)
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  // Relación: Un ingrediente se usa en muchos productos (recetas)
  recipes ProductIngredient[]
}

model ProductIngredient {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])

  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])

  quantity Float // Cuánto se necesita (ej: 0.15 kg de carne)

  @@unique([productId, ingredientId])
}

model Product {
  id    String @id @default(cuid())
  name  String
  price Float

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  ingredients ProductIngredient[]
  items       OrderItem[]

  createdAt DateTime @default(now())
}

model Order {
  id        String      @id @default(cuid())
  total     Float // Total de la venta
  totalCost Float       @default(0) // Costo de ingredientes usados
  tenantId  String
  tenant    Tenant      @relation(fields: [tenantId], references: [id])
  items     OrderItem[] // Relación con los items
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int // Cuantas unidades
  price     Float // Precio unitario AL MOMENTO de la venta
}
